# Dockerfile generated by DevOpsArk

# Use Node.js LTS as base image
FROM node:18 AS build

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json for dependency installation
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

# Copy all project files for build step
COPY . .

# Build the Vite app for production
RUN npm run build

# ---- Production stage: Serve static build output ----
FROM node:18-alpine AS production

# Install 'serve' package globally to serve the built app
RUN npm install -g serve

# Set working directory
WORKDIR /app

# Copy built files from the build stage
COPY --from=build /app/dist ./dist

# Expose port 3000 (default for serve)
EXPOSE 3000

# Serve the built Vite app
CMD ["serve", "-s", "dist", "-l", "3000"]