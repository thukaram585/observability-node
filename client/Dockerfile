# Dockerfile generated by DevOpsArk

# Use the official Node.js LTS image as the base image
FROM node:18-alpine

# Set working directory in the container
WORKDIR /app

# Copy package.json and package-lock.json first to leverage Docker layer caching for dependencies
COPY package.json package-lock.json ./

# Install project dependencies
RUN npm ci --omit=dev

# Copy the rest of the application source code
COPY . .

# Expose the default Node.js application port
EXPOSE 3000

# Define the default command to run the application
# Try 'start' script if available in package.json, otherwise allow override
CMD [ "npm", "start" ]