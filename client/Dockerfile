# Dockerfile generated by DevOpsArk

# Use official Node.js LTS image as base
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json before other files to leverage Docker cache for dependencies
COPY package.json package-lock.json ./

# Install Node.js dependencies
RUN npm ci

# Copy the rest of the application source code (if any)
COPY . .

# Expose the default port (commonly 3000; change as needed for your app)
EXPOSE 3000

# Default command - start using npm (update as necessary for your project)
CMD ["npm", "start"]