# Dockerfile generated by DevOpsArk

# Use official Node.js LTS image as base, inferring from package.json files
FROM node:20-alpine

# Set working directory inside container
WORKDIR /usr/src/app

# Copy package.json and package-lock.json first to leverage Docker cache for dependency installation
COPY package.json package-lock.json ./

# Install project dependencies
RUN npm ci --only=production

# Copy remaining project files
COPY . .

# Expose port 3000 by default (can be changed as per app config)
EXPOSE 3000

# Specify default command to run the main Node.js file
CMD ["node", "index.js"]